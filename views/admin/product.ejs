<%- include('./layouts/header.ejs') %>
    <%- include('./layouts/menu.ejs') %>

        <div class="container-fluid mt-5">
            <div class="row">

                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>gia_sp</th>
                                <th>Danh Muc</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach( (element,index)=> { %>
                                <tr>
                                    <td scope="row">
                                        <%= index + 1%>
                                    </td>
                                    <td>
                                        <%= element.name %>
                                    </td>
                                    <td style="width: 20%;">
                                        <img src="/<%= element.image %>" alt="" class="card-img">
                                        
                                    </td>
                                    <td>
                                        <%= element.price %>
                                    </td>
                                    <td>
                                        <%= element.CateName %>
                                    </td>
                                    <td>
                                        <%= element.status==1 ? 'Tạm ẩn' : 'Hiển thị' %>
                                    </td>
                                    <td>
                                        <a href="/admin/product-edit/<%= element.id %>" class="btn btn-success">Update</a>
                                        <a href="/admin/product-delete/<%= element.id %>" class="btn btn-danger">DELETE</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
<%- include('./layouts/footer.ejs') %>