<%-include('./layouts/header.ejs')  %> 
<%-include('./layouts/menu.ejs')  %> 

<div class="container mt-5">
    <div class="row">
        
        <div class="col-lg-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach( (element,index) => { %>
                        <tr>
                            <td scope="row"><%= index + 1%></td>
                            <td><%= element.name %> </td>
                            <td>
                                <a href="/admin/category-update/<%= element.id %>" class="btn btn-success">Update</a>
                                <a href="/admin/category-delete/<%= element.id %>" class="btn btn-danger">DELETE</a>
                            </td>
                        </tr>
                    <% }) %>
                   
                  
                </tbody>
            </table>
        </div>
    </div>
</div>
<%-include('./layouts/footer.ejs')  %> 