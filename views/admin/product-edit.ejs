<%- include('./layouts/header.ejs') %>
    <%- include('./layouts/menu.ejs') %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-6">

                    <form action="" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên</label>
                            <input type="text" class="form-control" name="ten_sp" aria-describedby="emailHelp"
                                placeholder="Enter email" value="<%= product.name %> ">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ảnh</label>
                            <input type="file" class="form-control" name="image" aria-describedby="emailHelp"
                                placeholder="Enter email">
                            <div class="img">
                                <img src="/<%= product.image %>" alt="" class="card-img">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Giá Sp</label>
                            <input type="text" class="form-control" name="price" aria-describedby="emailHelp"
                                placeholder="Enter email" value="<%= product.price %> ">
                        </div>
                        
                        <div class="form-group">
                            <label for="ma_danh_muc">Danh Mục</label>
                            <select class="form-control" name="category_id" id="category_id">
                                <% categories.forEach((item, index)=> { %>
                                    <% if (item.id==product.category_id) { %>
                                        <option value="<%= item.id %>" selected>
                                            <%= item.id %> - <%= item.name %>
                                        </option>
                                        <% } else { %>
                                            <option value="<%= item.id %>">
                                                <%= item.id %> - <%= item.name %>
                                            </option>
                                        <% } %>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="">Trạng thái danh mục</label>
            
                            <div class="radio">
                                <label>
                                    <input type="radio" name="status" value="1" <%=data.status==0 ? 'checked' : '' %>>
                                    Hiển thị
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="status" value="0" <%=data.status==1 ? 'checked' : '' %>>
                                    Tạm ẩn
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>
        </div>
<%- include('./layouts/footer.ejs') %>